{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/c", // compile only
                "/std:c++20",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}\\build\\",
                "/Fd${workspaceFolder}\\build\\",
                "/I${fileDirname}\\3rdparty\\include",
                "${file}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build project",
            "type": "cppbuild",
            "command": "cl.exe",
            "args": [
                "/std:c++20",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}\\build\\",
                // Control where all PDBs will end up, including CRT debug symbols (vc140.pdb)
                "/Fd${workspaceFolder}\\build\\",
                "/Fe${workspaceFolder}\\build\\main.exe",
                "/I${workspaceFolder}\\3rdparty\\include",
                "main.cpp",
                "User32.lib",
                "/link",
                // Seems already controlled via /Fd
                //"/PDB:build\\",
                "/SUBSYSTEM:CONSOLE",
                // Seems to have the same effect as /Fe
                //"/OUT:${workspaceFolder}\\build\\main.exe",
                "/ENTRY:wWinMainCRTStartup",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "My build task"
        }
    ],
    "version": "2.0.0"
}